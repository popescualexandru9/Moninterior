<div class="min-h-screen bg-gray-50 py-12" data-header="navbar_scroll_black">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <% if notice.present? %>
      <div class="mb-8">
        <p class="py-3 px-4 bg-green-50 text-green-600 font-medium rounded-lg inline-block shadow-sm" id="notice">
          <%= notice %>
        </p>
      </div>
    <% end %>

    <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
      <div class="p-8">
        <%= render @project %>
      </div>

      <div class="px-8 py-6 bg-gray-50 border-t border-gray-100">
        <div class="flex flex-wrap gap-4">
          <%= link_to project_project_images_path(@project), class: "flex items-center px-6 py-3 bg-white text-gray-700 rounded-lg font-medium border border-gray-200 transition-colors duration-200 hover:bg-gray-50 hover:border-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            Manage Images
          <% end %>

          <%= link_to edit_project_path(@project), class: "flex items-center px-6 py-3 bg-white text-gray-700 rounded-lg font-medium border border-gray-200 transition-colors duration-200 hover:bg-gray-50 hover:border-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            Edit Project
          <% end %>

          <%= link_to projects_path, class: "flex items-center px-6 py-3 bg-white text-gray-700 rounded-lg font-medium border border-gray-200 transition-colors duration-200 hover:bg-gray-50 hover:border-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Projects
          <% end %>

          <%= button_to @project, method: :delete, class: "flex items-center px-6 py-3 bg-white text-red-600 rounded-lg font-medium border border-red-200 transition-colors duration-200 hover:bg-red-50 hover:border-red-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500", data: { confirm: "Are you sure you want to delete this project?" } do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
            Delete Project
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
