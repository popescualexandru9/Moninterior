<div class="min-h-screen bg-gray-50 py-12" data-header="navbar_scroll_black">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <% if notice.present? %>
      <div class="mb-8">
        <p class="py-3 px-4 bg-green-50 text-green-600 font-medium rounded-lg inline-block shadow-sm" id="notice">
          <%= notice %>
        </p>
      </div>
    <% end %>

    <div class="flex items-center justify-between mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Images for <%= @project.name %></h1>
      </div>
      <%= link_to project_path(@project), class: "flex items-center px-6 py-3 bg-white text-gray-700 rounded-lg font-medium border border-gray-200 transition-colors duration-200 hover:bg-gray-50 hover:border-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Project
      <% end %>
    </div>

    <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Add New Image</h2>
      <%= form_with(model: [@project, @project_image], local: true, class: "space-y-6") do |f| %>
        <% if @project_image.errors.any? %>
          <div class="bg-red-50 p-4 rounded-lg mb-6">
            <div class="text-sm text-red-700">
              <h3 class="font-medium mb-2">Please fix the following errors:</h3>
              <ul class="list-disc pl-5">
                <% @project_image.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-1" do %>
              Name <span class="text-red-500">*</span>
            <% end %>
            <%= f.text_field :name,
                            required: true,
                            class: 'w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors duration-200',
                            autocomplete: 'off' %>
          </div>

          <div>
            <%= f.label :tag, class: "block text-sm font-medium text-gray-700 mb-1" do %>
              Tag <span class="text-red-500">*</span>
            <% end %>
            <%= f.text_field :tag,
                            required: true,
                            class: 'w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors duration-200',
                            autocomplete: 'off' %>
          </div>
        </div>

        <div>
          <%= f.label :image, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg hover:border-indigo-500 transition-colors duration-200 cursor-pointer" onclick="document.getElementById('project_image_image').click();">
            <div class="space-y-1 text-center">
              <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
              <div class="flex flex-col items-center text-sm text-gray-600">
                <%= f.file_field :image, class: "hidden", required: true, accept: "image/png,image/jpg,image/jpeg",
                    data: {
                      filename_display: "selected-filename"
                    } %>
                <span class="text-indigo-600 hover:text-indigo-500 font-medium">Click to upload</span>
                <span>or drag and drop</span>
                <p id="selected-filename" class="mt-2 text-sm text-gray-500"></p>
              </div>
              <p class="text-xs text-gray-500">PNG, JPG, JPEG up to 5MB</p>
            </div>
          </div>
        </div>

        <div class="flex justify-center">
          <%= f.submit "Add Image", class: "w-64 px-6 py-2.5 bg-indigo-600 text-white text-base rounded-lg font-medium shadow-md hover:bg-indigo-700 transform hover:-translate-y-0.5 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8" x-data="projectImageModal">
      <% @project_images.each do |project_image| %>
        <div class='bg-white rounded-xl shadow-md overflow-hidden h-[280px] group'>
          <div class='relative h-[200px] cursor-pointer'
               x-on:click="openModal('<%= url_for(project_image.image) %>', '<%= project_image.name %>', '<%= project_image.tag %>')">
            <% if project_image.image.attached? && project_image.image.persisted? %>
              <%= image_tag project_image.image, class: 'w-full h-full object-cover' %>
            <% else %>
              <div class='w-full h-full flex items-center justify-center bg-gray-100'>
                <svg class='w-12 h-12 text-gray-400' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                  <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z' />
                </svg>
              </div>
            <% end %>
          </div>
          <div class="p-4">
            <div class="flex items-center justify-between mb-2">
              <div>
                <h3 class="font-semibold text-gray-900"><%= project_image.name %></h3>
                <p class="text-sm text-gray-500"><%= project_image.tag %></p>
              </div>
              <%= button_to project_project_image_path(@project, project_image),
                  method: :delete,
                  class: "p-2 text-gray-400 hover:text-red-500 transition-colors duration-200",
                  data: { confirm: "Are you sure you want to delete this image?" } do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Full Screen Modal -->
      <div x-show='showModal'
           x-cloak
           x-on:keydown.escape.window='closeModal()'
           x-on:click='closeModal()'
           class='fixed inset-0 z-50 flex items-center justify-center'
           style='background-color: rgba(0, 0, 0, 0.5);'>
        <!-- Modal Content -->
        <div class='relative z-50 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8'>
          <div class='relative'>
            <!-- Close Button -->
            <button x-on:click='closeModal' class='absolute top-4 right-4 text-white hover:text-gray-300 z-50'>
              <svg class='w-6 h-6' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M6 18L18 6M6 6l12 12' />
              </svg>
            </button>

            <!-- Image -->
            <div class="relative">
              <img :src="imageSrc" class="max-h-[85vh] object-contain">
              <div class="absolute bottom-0 left-0 right-0 bg-black bg-opacity-50 text-white p-4">
                <h3 class="text-lg font-semibold" x-text="imageTitle"></h3>
                <p class="text-sm opacity-75" x-text="imageTag"></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const fileInput = document.getElementById('project_image_image');
    const filenameDisplay = document.getElementById('selected-filename');

    fileInput.addEventListener('change', function() {
      if (this.files && this.files[0]) {
        filenameDisplay.textContent = 'Selected file: ' + this.files[0].name;
      } else {
        filenameDisplay.textContent = '';
      }
    });
  });
</script>
